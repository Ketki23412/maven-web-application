pipeline {
    agent any
    stages {
        stage('Source Code Management') {
            steps {
                git 'https://github.com/Ketki23412/maven-web-application.git'
            }
        }
        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t kj-maven-web-app .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh '''
                    docker rm -f kj-maven-web-container || true
                    docker run -d --name kj-maven-web-container -p 8081:8080 kj-maven-web-app
                '''
            }
        }
    }
}
